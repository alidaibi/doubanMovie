page{
  font-family: "Microsoft YaHei";
}
.films{
  display: flex;
  justify-content: space-around;
  flex-flow: row wrap;
  margin-top: 20rpx;
}

.film-item {
    width: 350rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    border: 1px solid #e4e4e4;
    box-shadow: 0 20rpx 40rpx #eee;
    overflow: hidden;
    animation: fadeIn 1s;
}

.film-cover {
    position: relative;
    overflow: hidden;
}
.film-cover, .film-cover-img {
    width: 350rpx;
    height: 508rpx;
}
.film-rating{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: right;
  background-color: rgba(0,0,0,.8);
  color: #fff;
  padding: 15rpx 20rpx;
  font-size: 12px;
}
.film-intro{
  padding: 10rpx;
}
.film-title{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}