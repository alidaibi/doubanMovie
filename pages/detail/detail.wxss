/* pages/detail/detail.wxss */
page{
    font-family: 'Microsoft YaHei';
}
.fd-header{
    position: relative;
    display: flex;
    height: 600rpx;
    overflow: hidden;
}
.fd-bg{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -2;
    background-size: cover;
    background-position: center;
    filter: blur(15rpx);
    transform: scale(1.2);
}
.fd-image{
    width: 300rpx;
    height: 420rpx;
    border-radius:  10rpx;
    margin-top: 80rpx;
    margin-left: 40rpx;
}
.fd-detail{
    flex: 1;
    padding-top: 80rpx;
    padding-left: 40rpx;
    color: #fff;
}
.fd-title{
    font-size: 42rpx;
    margin-bottom: 40rpx;
}
.fd-intro-text{
    margin-top: 18rpx;
    color: #eee;
    font-size: 30rpx;
}

.fd-favorite {
    position: absolute;
    left: 120rpx;
    bottom: 30rpx;
    color: #fff;
    border: 1rpx solid #fff;
    border-radius: 30rpx;
    background-position: 20rpx center;
    background-repeat: no-repeat;
    background-image: url(data:image/png;base64,);
    background-size: 32rpx;
    padding: 10rpx 30rpx;
    padding-left: 60rpx;
    font-size: 32rpx;
    transition: left .3s, color .3s, background-image .3s;
}
fd-favorite-active {
    left: 100rpx;
    width: 190rpx;
    background-image: url(data:image/png;base64,);
    color: #f4ea2a;
    border: 1px solid #f4ea2a;
}

.fd-favorite-active::before {
    content: 'å·²'
}
.fd-data{
    display: flex;
    height: 150rpx;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
}
.fd-data-item{
    flex: 1;
    text-align: center;
    background: #fff;
    border-left: 1rpx solid #eee;
}
.fd-data-item:first-child{
    border-left: 0;
}
.fd-data-num{
    font-size: 40rpx;
    font-weight: 100;
    color: #444;
}
.fd-data-text{
    color: #999;
    font-size: 30rpx;
}
.fd-bd{
    padding: 40rpx;
}
.fd-bd-intro{
    text-align: justify;
    line-height: 1.5;
    color: #666;
}
.fd-bd-person{
    display: flex;
    overflow-x: scroll;
    overflow-y: hidden;
}
.fd-bd-person-item image{
    width: 280rpx;
    height: 400rpx;
}
.fd-bd-person-item:first-child{
    margin-left: 0;
}
.fd-bd-person-item{
    margin-left: 20rpx;
    text-align: center;
}